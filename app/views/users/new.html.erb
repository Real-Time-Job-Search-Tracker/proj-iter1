<div class="auth-wrapper">
  <div class="auth-card">

    <h1 class="auth-title">Create an account</h1>
    <p class="auth-subtitle">Start tracking your job applications easily.</p>

    <% if @user && @user.errors.any? %>
      <div class="auth-alert">
        <%= @user.errors.full_messages.join(", ") %>
      </div>
    <% end %>

    <%= form_with model: @user,
                  url: sign_up_path,
                  method: :post,
                  local: true,
                  html: { class: "auth-form" } do |f| %>

      <div class="auth-field">
        <label class="auth-label">Username</label>
        <%= f.text_field :username,
              class: "auth-input",
              required: true,
              autocomplete: "username" %>
      </div>

      <div class="auth-field">
        <label class="auth-label">Email</label>
        <%= f.email_field :email,
              class: "auth-input",
              required: true,
              autocomplete: "email" %>
      </div>

      <div class="auth-field">
        <label class="auth-label">Password</label>
        <%= f.password_field :password,
              class: "auth-input",
              required: true,
              autocomplete: "new-password" %>
      </div>

      <div class="auth-field">
        <label class="auth-label">Password confirmation</label>
        <%= f.password_field :password_confirmation,
              class: "auth-input",
              required: true,
              autocomplete: "new-password" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "Create account", class: "auth-button primary" %>
      </div>

    <% end %>

    <p class="auth-footer-text">
      Already have an account?
      <%= link_to "Sign in", sign_in_path, class: "auth-link" %>
    </p>

  </div>
</div>
